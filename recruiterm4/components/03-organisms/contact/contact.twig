{% set contact_base_class = 'contact'%}

<section {{bem(contact_base_class)}}>
  <div {{bem('overlay',[],contact_base_class)}}>
  </div>

  <div {{bem('container',[],contact_base_class)}}>
    <div {{bem('col_1',[],contact_base_class)}}>
      {% include "@atoms/text/headings/_heading.twig" with {
        heading: heading,
			  heading_level: 2,}%}

			{% include "@atoms/text/text/01-paragraph.twig" with {
      paragraph_content: paragraph_content,}%}	
    </div>

    <div {{bem('col_2',[],contact_base_class)}}>
      {% include "@molecules/card/card.twig" with {
        image_src: contact_card_img,
        paragraph_content: contact_card_body,
        card_modifiers: contact_card_modifiers,
      } %}
    </div>
  </div>
</section>