{% set footer__base_class = 'footer' %}

<footer {{ bem(footer__base_class) }}>
  <div {{ bem('container', [], footer__base_class) }}>
    
    <div {{ bem('heading', [], footer__base_class) }}>
        {% include "@atoms/text/headings/_heading.twig" with {
            heading: heading,
            heading_level: 2,
        } %}
    </div>

    <div {{ bem('body', [], footer__base_class) }}>

      <div {{ bem('row_1', [], footer__base_class) }}>

        <div {{ bem('content_a', [], footer__base_class) }}>
		      {% include "@atoms/text/text/01-paragraph.twig" with {
      		paragraph_content: paragraph_content_a,}%}		       
        </div>

        <div {{ bem('content_b', [], footer__base_class) }}>
		      {% include "@atoms/text/text/01-paragraph.twig" with {
      		paragraph_content: paragraph_content_b,}%}		       
        </div>

      </div>

      <div {{ bem('row_2', [], footer__base_class) }}>

        <div {{ bem('social', [], footer__base_class) }}>
          {% block footer__social %}
          {% include "@molecules/menus/social/social-menu.twig" with {
           social_menu_items: social_menu_items1,}%}
          {% endblock %}
        </div>

        <div {{ bem('privacy', [], footer__base_class) }}>
		      {% include "@atoms/text/text/01-paragraph.twig" with {
      		paragraph_content: privacy,}%}		       
        </div>

      </div>
    </div>  
  </div>
</footer>
